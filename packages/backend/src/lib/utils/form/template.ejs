<html lang="en">
  <head>
    <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet" />
  </head>
  <body>
    <div class="flex-col p-12">
      <h2 class="text-center font-bold mb-4">Verifiable Credential Form</h2>
      <img class="mx-auto w-48 h-48 mb-4" src="<%= qrCode %>" alt="qrCode" />
      <div class="flex justify-center mb-4">
        <table class="table-auto">
          <% for (const [key, value] of Object.entries(payload)) { %>
          <tbody>
            <tr>
              <td class="border px-4 py-2 font-bold"><%= key %></td>
              <td class="border px-4 py-2 font-medium"><%= value %></td>
            </tr>
          </tbody>
          <% } %>
        </table>
      </div>
    </div>
  </body>
</html>
